{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "webjsx",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "types": ["benchmark", "node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "paths": {
      "bench-utils/*": ["../bench-utils/*"]
    },
    "rootDir": "./src",
    "rootDirs": ["./src"],
    "composite": false
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
